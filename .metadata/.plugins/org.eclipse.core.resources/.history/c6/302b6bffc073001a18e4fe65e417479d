package p5731;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner cin = new Scanner(System.in);
		int n = cin.nextInt();
		int sum[][] = new int[10][10];
		int dir = 0;//0¡ú , 1¡ý ,2¡û ,3¡ü
		int i =0;
		int j =0;
		int max = n*n;
		int start = 1;
		while(start<=max){
			if(i<n&&j<n&&sum[i][j]==0){
				sum[i][j]=start;
				if(dir==0){
					j++;
				}
				if(dir==1){
					i++;
				}
				if(dir==2){
					j--;
				}
				if(dir==3){
					i--;
				}
				start++;
			}
			else {
				if(dir==0){
					j--;
				}
				if(dir==1){
					i--;
				}
				if(dir==2){
					j++;
				}
				if(dir==3){
					i++;
				}
				dir+=1;
				if(dir==4)dir=0;
			}
		}
		for(int q=0;q<n;q++){
			for(int w=0;w<n;w++){
				 System.out.print(sum[q][w]);
			}
			System.out.println();
		}
	}

}
