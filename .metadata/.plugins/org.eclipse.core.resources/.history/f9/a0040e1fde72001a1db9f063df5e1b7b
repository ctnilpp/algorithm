package p5727;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner cin = new Scanner(System.in);
		long n = cin.nextLong();
		long result[] = new long[100000];
		int cnt =0;
		while(n!=1){
			if(n%2!=0){
				result[cnt++]=n;
				n=n*3+1;
			}
			else {
				result[cnt++]=n;
				n/=2;
			}
		}
		System.out.println();
	}

}
