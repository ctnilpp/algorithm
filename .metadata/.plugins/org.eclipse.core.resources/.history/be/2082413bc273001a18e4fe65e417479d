package p5731;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner cin = new Scanner(System.in);
		int n = cin.nextInt();
		int sum[][] = new int[11][11];
		int dir = 0;//0¡ú , 1¡ý ,2¡û ,3¡ü
		int i =1;
		int j =1;
		int max = n*n;
		int start = 1;
		while(start<=max){
			if(i<n+1&&j<n+1&&sum[i][j]==0){
				sum[i][j]=start;
				if(dir==0){
					j++;
				}
				if(dir==1){
					i++;
				}
				if(dir==2){
					j--;
				}
				if(dir==3){
					i--;
				}
				start++;
			}
			else {
				if(j==n+1){
					i+=1;
					j=n;
				}
				if(j==0){
					i-=1;
					j=1;
				}
				if(i==n+1){
					i=n;
					j-=1;
				}
				if(i==0){
					i=1;
					j+=1;
				}
				dir+=1;
				if(dir==4)dir=0;
			}
		}
		for(int q=1;q<=n;q++){
			for(int w=1;w<=n;w++){
				 System.out.print(sum[q][w]);
			}
			System.out.println();
		}
	}

}
