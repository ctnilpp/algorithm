package p5719;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner cin = new Scanner(System.in);
		int n = cin.nextInt();
		int k = cin.nextInt();
		int sum1 = 0;
		int sum2 = 0;
		int now = 1*k;
		int nownum =0;
		while(now<n){
			sum2+=now;
			now+=k;
			nownum+=1;
		}
		System.out.println(sum2*1.0/nownum);
	}

}
