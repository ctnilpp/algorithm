package test;

import java.util.Scanner;

public class Main {
	public static Scanner sc = new Scanner(System.in);
	
	public static void rectangle(int n) {
		int cnt = 1;
		int row = 1;
		for (int i = 1; i <= n; i++) {
			while (row % (n+1) != 0) {// !=0 就不换行 因为可以观察到矩形的最右边那个数能被4整除才换行
				if (cnt < 10) {
					System.out.print("0"+cnt);				
				}else {
					System.out.print(cnt);
				}
				cnt++;
				row++;
			}
			row++;//如果不加这句，则上面的while 下一次就会跳出不输出
			System.out.println();
		}
	}
	
	public static void triangle(int n) {
		int cnt = 1;
		int space = 2 * n;
		for (int i = 1; i <= n; i++) {
			//输出空格
			space = space - 2;
			for (int j = 1; j <= space; j++) {
				System.out.print(" ");
			}

			for (int col = 1; col <= i; col++) {
				if (cnt < 10) {
					System.out.print("0"+cnt);
				}else {
					System.out.print(cnt);					
				}
				cnt++;
			}
			System.out.println();
		}
	}
	
	public static void main(String[] args) {
		int n = sc.nextInt();
		rectangle(n);
		System.out.println();
		triangle(n);
	}

}

