package p5705;

import java.text.DecimalFormat;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner cin = new Scanner(System.in);
		double now = cin.nextDouble();
		double little = now-(int)now;
		int zhengshu = (int)now;
		int baiwei = zhengshu/100;
		int shiwei = (zhengshu/10)%10;
		int gewei = zhengshu%10;
		System.out.println((int)little*10);
		System.out.println(baiwei+" "+shiwei+" "+gewei);
	}

}
