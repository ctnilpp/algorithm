package p2181;

import java.math.BigDecimal;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner cin = new Scanner(System.in);
		long n = cin.nextLong();
		BigDecimal bd = new BigDecimal(n);
		BigDecimal jian1 = new BigDecimal(-1);
		BigDecimal jian2 = new BigDecimal(-2);
		BigDecimal jian3 = new BigDecimal(-3);
		BigDecimal chu = new BigDecimal(24);
		System.out.println(bd.multiply(bd.add(jian1)).multiply(bd.add(jian2)).multiply(jian3).divide(chu));
	}

}
